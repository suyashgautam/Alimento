    <script>
        var showRestaurant = document.querySelector(".allRestaurants");
        const queryString = window.location.search;
        const urlParams = new URLSearchParams(queryString);

        const dish_name = urlParams.get('d_name');
        const city = (window.location.pathname).replace('/', '');
        const title = document.querySelector('.rest-title');
        let tempCity = (city).replace(/(^\w{1})|(\s+\w{1})/g, letter => letter.toUpperCase());
        title.innerHTML = `<strong>Restaurant serving in ${tempCity}</strong>`
        var allRest = '';
        fetch(`/search/restaurant?city=${city}&d_name=${dish_name}`).then(response => response.json()).then(response => {
            console.log(response);
            response.forEach(element => {
                const r_name = (element.r_name).replace(/(^\w{1})|(\s+\w{1})/g, letter => letter.toUpperCase());
                const newd = `<div class="col-lg-3 mb-5">
                    <a href="/restaurant/${element.rest_id}">
                    <div class="card">
                    <img src="${(element.r_image == "")?"./image-not-available.jpg":'../' + element.r_image}" height="150" width="100%" alt="" class="card-img-top">
                        <div class="card-body text-center">
                            <h5 class="card-title"><strong>${r_name}</strong></h5>
                            <p class="card-text"><strong><em>Address:</em></strong> ${element.r_address}</p>
                        </div>
                    </div>
                </a>
                </div>`;
                allRest = allRest + newd;
            })
            showRestaurant.innerHTML = allRest;
        });
    </script>
