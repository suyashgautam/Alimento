        const alert = document.querySelector('.success-alert');
        
        if(!alert.classList.contains('hide'))
        {
            console.log(alert.classList);
            setTimeout(()=>{
                alert.classList.add('hide');
                console.log("Hello");
            }, 3000)
        }
    </script>
</body>

